<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand">
					<!--href="(LUDOA)Url.Action("Index", "Home")" title="title"-->
					<img src="~/slike/avmau8.png" alt="additional title" />
				</a>
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<!-- @Html.ActionLink("AV-MAU Azil grada Sarajeva", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
				 ubaceno dole umjesto Početna  -->

			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					
					<li>@Html.ActionLink("AV-MAU Azil grada Sarajeva", "Index", "Home")</li>
					<li>@Html.ActionLink("O nama", "About", "Home")</li>
					<li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>
				@DateTime.Now.DayOfWeek  @DateTime.Now.Hour:@DateTime.Now.Minute - Objektno orijentisana analiza i dizajn ASP.NET App
			</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
